{
    "name": "better-file-path",
    "displayName": "Better File Path",
    "description": "Copy path of current file with forward slashes starting from project root folder",
    "version": "0.0.1",
    "publisher": "dkaba",
    "engines": {
        "vscode": "^1.17.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/dKab/vscode-copy-file-name-ext"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Copy Active File Path",
        "clipboard",
        "copy",
        "command",
        "base",
        "path",
        "forward slashes",
        "slashes"
    ],
    "activationEvents": [
        "onCommand:extension.copyProjectPath"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.copyProjectPath",
                "title": "Copy Project Based Path"
            }
        ],
        "keybindings": [
            {
                "command": "extension.copyProjectPath",
                "key": "ctrl+alt+c"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.copyProjectPath"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.5.3",
        "vscode": "^1.1.5"
    },
    "dependencies": {
        "copy-paste": "^1.3.0"
    }
}